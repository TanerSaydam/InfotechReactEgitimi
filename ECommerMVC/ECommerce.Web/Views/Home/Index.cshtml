@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4">Welcome to Our Store</h1>
                <p class="lead">Discover amazing products at great prices</p>
                <a href="#featured" class="btn btn-light btn-lg">Shop Now</a>
            </div>
            <div class="col-md-6">
                <img src="/images/hero-image.jpg" alt="Hero Image" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

<!-- Categories Section -->
<section class="categories mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Shop by Category</h2>
        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">@category</h5>
                            <a href="#" class="btn btn-outline-primary">View Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section id="featured" class="featured-products mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Featured Products</h2>
        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0">$@product.Price.ToString("N2")</span>}
                                <a class="btn btn-primary add-to-cart" href="/Home/AddToBasket?productId=@product.Id">
                                    Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- New Arrivals Section -->
<section class="new-arrivals mb-5">
    <div class="container">
        <h2 class="text-center mb-4">New Arrivals</h2>
        <div class="row g-4">
            @foreach (var product in Model.NewArrivals)
            {
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0">$@product.Price.ToString("N2")</span>
                                <button class="btn btn-primary add-to-cart" data-product-id="@product.Id">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .hero {
            background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        }
    </style>    
}